package_name: snipshue
class_name: SnipsHue
description: Philips Hue skill for Snips
parameters: ["hostname", "username"]
intents:
  - intent: lightsTurnOff
    action: >
      {%
      skill.light_off(intent.house_room)
      %}
  - intent: lightsTurnOnSet
    action: >
      {%
      skill.light_on_set("white", intent.number, intent.house_room)
      %}
  - intent: lightsTurnDown
    action: >
      {%
      skill.light_down(intent.house_room)
      %}
  - intent: lightsTurnUp
    action: >
      {%
      skill.light_up(intent.house_room)
      %}