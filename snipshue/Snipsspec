package_name: snipshue
class_name: SnipsHue
description: Philips Hue skill for Snips
parameters: ["hostname", "username"]
intents:
  - intent: lightsTurnOff
    action: |
      {%
      snips.skill.light_off(snips.intent.house_room)
      %}
  - intent: lightsTurnOnSet
    action: |
      {%
      snips.skill.light_on_set(None, snips.intent.number, snips.intent.house_room)
      %}
  - intent: lightsTurnDown
    action: |
      {%
      snips.skill.light_down(20, snips.intent.house_room)
      %}
  - intent: lightsTurnUp
    action: |
      {%
      snips.skill.light_up(20, snips.intent.house_room)
      %}
